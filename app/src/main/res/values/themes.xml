<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.KidsLearningABCD" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.KidsLearningABCD" parent="Base.Theme.KidsLearningABCD" />

    <style name="ButtonTheme">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="linearlayouytheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="buttonstyle">
        <item name="android:layout_width">@dimen/_120sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_marginTop">@dimen/_30sdp</item>
        <item name="android:background">@drawable/intro_button_bg</item>
        <item name="android:fontFamily">@font/manrope</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>
</resources>